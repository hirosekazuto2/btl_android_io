<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="120dp"
        android:background="@drawable/image"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ban co chac chan muon xoa"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#ff0"
            android:layout_marginBottom="15dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="chap nhan"
                android:id="@+id/btn_chapnhanxoa"
                android:layout_weight="5"
                android:drawableLeft="@drawable/ic_menu_manage"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="huy bo"
                android:id="@+id/btn_huyboxoa"
                android:layout_weight="5"
                android:drawableLeft="@drawable/ic_motifications_black_24dp"/>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>